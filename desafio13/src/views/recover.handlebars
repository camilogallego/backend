<div>
  <h1>Recuperacion de contrasena</h1>

  <div>
    <form action="/api/update" method="post">
      <label for="email">Correo</label><br />
      <input
        type="email"
        name="email"
        id="email"
        placeholder="introduzca su correo electronico"
      />
      <br />
      <label for="oldPassword">Contraseña anterior</label><br />
      <input
        type="password"
        name="oldPassword"
        id="oldPassword"
        placeholder="Introduzca su contraseña anterior"
      /><br />
      <label for="password">Nueva Contrasena</label>
      <br />
      <input
        type="password"
        name="newPassword"
        id="newPassword"
        placeholder="introduzca su nueva contrasena"
        required
      />
      <br />
      <button type="submit">actualizar contrasena</button>
    </form>
  </div>

</div>