{{#if payload}}
    <h1>Productos</h1>
    <div>
        {{#each payload}}
            <div>
                <h2>{{this.title}}</h2>
                <p><b>Descripción:</b> {{this.description}}</p>
                <p><b>Precio: $</b>{{this.price}}</p>
                <p><b>categoria: $</b>{{this.category}}</p>
                <p><b>Código:</b> {{this.code}}</p>
                <p><b>Stock:</b> {{this.stock}}</p>
            </div>
        {{/each}}
    </div>
{{else}}
    <strong>sin productos</strong>
{{/if}}

<div>
    {{#if hasPrevPage}}
        <a href="?page={{prevPage}}">Prev</a>
    {{/if}}
    {{#if hasNextPage}}
        <a href="?page={{nextPage}}">Next</a>
    {{/if}}
</div>